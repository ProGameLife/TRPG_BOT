generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ability {
  user_id String @id @db.VarChar(64)
  str     Int    @default(0)
  dex     Int    @default(0)
  hel     Int    @default(0)
  idea    Int    @default(0)
  pow     Int    @default(0)
  big     Int    @default(0)
  edu     Int    @default(0)
  look    Int    @default(0)
  mov     Int    @default(0)
  luk     Int    @default(0)
  hp      Int    @default(0)
  mp      Int    @default(0)
  san     Int    @default(0)
}

model skill {
  user_id               String @id @db.VarChar(64)
  skill_point           Int    @default(0)
  accounting            Int    @default(10)
  anthropology          Int    @default(1)
  archaeology           Int    @default(1)
  art                   Int    @default(5)
  astronomy             Int    @default(1)
  bargain               Int    @default(5)
  biology               Int    @default(1)
  chemistry             Int    @default(1)
  climb                 Int    @default(40)
  computer              Int    @default(1)
  conceal               Int    @default(15)
  craft                 Int    @default(5)
  credit_rating         Int    @default(15)
  cthulhu_mythos        Int    @default(0)
  disguise              Int    @default(1)
  dodge                 Int    @default(0)
  drive_automobile      Int    @default(20)
  electrical_repair     Int    @default(10)
  electronics           Int    @default(1)
  fast_talk             Int    @default(5)
  first_aid             Int    @default(30)
  geology               Int    @default(1)
  hide                  Int    @default(10)
  history               Int    @default(20)
  jump                  Int    @default(25)
  law                   Int    @default(5)
  library_use           Int    @default(25)
  listener              Int    @default(25)
  locksmith             Int    @default(1)
  martial_arts          Int    @default(1)
  mechanical_repair     Int    @default(20)
  medicine              Int    @default(5)
  natural_history       Int    @default(10)
  navigate              Int    @default(10)
  occult                Int    @default(5)
  operate_heavy_machine Int    @default(1)
  other_language        Int    @default(1)
  own_language          Int    @default(0)
  persuade              Int    @default(15)
  photography           Int    @default(10)
  physics               Int    @default(1)
  pilot                 Int    @default(1)
  aircraft_control      Int    @default(0)
  ship_control          Int    @default(0)
  psychoanalysis        Int    @default(1)
  psychology            Int    @default(5)
  ride                  Int    @default(5)
  sneak                 Int    @default(25)
  swim                  Int    @default(25)
  throw                 Int    @default(25)
  track                 Int    @default(10)
  handgun               Int    @default(20)
  machine_gun           Int    @default(15)
  rifle                 Int    @default(25)
  shotgun               Int    @default(30)
  submachine_gun        Int    @default(15)
  fist_punch            Int    @default(50)
  grapple               Int    @default(25)
  head_buff             Int    @default(10)
  kick                  Int    @default(25)
  observation           Int    @default(25)
  charm                 Int    @default(15)
  math                  Int    @default(10)
}

model skill_uses {
  user_id    String  @id @db.VarChar(64)
  use_point  Int     @default(0)
  skill_name String? @db.VarChar(128)
  skill_stat String? @db.VarChar(128)
}

model user_status {
  user_id    String @id @db.VarChar(64)
  p_name     String @default("") @db.VarChar(16)
  p_age      Int    @default(0)
  p_sex      String @default("") @db.VarChar(8)
  p_job      String @default("") @db.VarChar(16)
  image_link String @default("https://png.clipart.me/istock/previews/9349/93493545-people-icon.jpg") @db.VarChar(256)
  back_story String @default("") @db.VarChar(256)
}
